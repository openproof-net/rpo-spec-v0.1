  <script>
    // Lightweight deterministic-ish demo numbers (no randomness, stable per day)
    (function(){
      const d = new Date();
      const seed = (d.getUTCFullYear()*10000) + ((d.getUTCMonth()+1)*100) + d.getUTCDate();
      const clamp = (x,min,max)=>Math.max(min,Math.min(max,x));

      const coverage = clamp(62 + (seed % 19), 55, 88);           // 55-88
      const recon    = clamp(58 + ((seed*3) % 25), 50, 90);       // 50-90
      const integrity= "SHA-256 ✓";

      document.getElementById("mCoverage").textContent = coverage + "%";
      document.getElementById("mRecon").textContent    = recon + "/100";
      document.getElementById("mIntegrity").textContent= integrity;
    })();
  </script>
