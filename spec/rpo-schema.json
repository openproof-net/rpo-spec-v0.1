{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rpo.openproof.net/schema/rpo-v0.1.json",
  "title": "RPO v0.1 â€” Rapport Probatoire Ouvert",
  "description": "JSON Schema for the OpenProof RPO v0.1 bundle.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "rpo_version",
    "type",
    "bundle_id",
    "created_at",
    "issuer",
    "subject",
    "evidence",
    "narrative"
  ],
  "properties": {
    "rpo_version": {
      "type": "string",
      "const": "0.1"
    },
    "type": {
      "type": "string",
      "const": "evidence_bundle"
    },
    "bundle_id": {
      "type": "string",
      "format": "uuid"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "jurisdiction": {
      "type": "string"
    },
    "language": {
      "type": "string",
      "description": "BCP-47 language tag, e.g. 'fr-FR' or 'en-GB'"
    },
    "issuer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "id", "role"],
      "properties": {
        "name": { "type": "string" },
        "id":   { "type": "string" },
        "role": { "type": "string" }
      }
    },
    "subject": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "id", "role"],
      "properties": {
        "name": { "type": "string" },
        "id":   { "type": "string" },
        "role": { "type": "string" }
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type"],
        "properties": {
          "id":          { "type": "string" },
          "type":        { "type": "string" },
          "description": { "type": "string" },
          "hash":        { "type": "string" },
          "uri":         { "type": "string", "format": "uri" }
        }
      }
    },
    "narrative": {
      "type": "object",
      "additionalProperties": false,
      "required": ["summary", "pdf_hash"],
      "properties": {
        "summary":     { "type": "string" },
        "pdf_hash":    { "type": "string" },
        "pdf_uri":     { "type": "string", "format": "uri" },
        "timeline_ref":{ "type": "string" }
      }
    },
    "registry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["registry_id", "entry_id", "public_hash"],
      "properties": {
        "registry_id": { "type": "string" },
        "entry_id":    { "type": "string" },
        "public_hash": { "type": "string" }
      }
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["algorithm", "value", "created_at"],
        "properties": {
          "algorithm": { "type": "string" },
          "value":     { "type": "string" },
          "signer_id": { "type": "string" },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
