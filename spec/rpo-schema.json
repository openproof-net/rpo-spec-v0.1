{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rpo.openproof.net/spec/v0.1/rpo-schema.json",
  "title": "OpenProof RPO v0.1",
  "description": "Minimal JSON Schema for RPO (Rapport Probatoire Ouvert) bundles.",
  "type": "object",
  "properties": {
    "rpo_version": {
      "type": "string",
      "const": "0.1"
    },
    "type": {
      "type": "string",
      "enum": ["evidence_bundle"]
    },
    "bundle_id": {
      "type": "string",
      "description": "Unique identifier of the RPO bundle.",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "issuer": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "id": { "type": "string" },
        "role": { "type": "string" }
      },
      "required": ["name"],
      "additionalProperties": true
    },
    "subject": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "id": { "type": "string" },
        "role": { "type": "string" }
      },
      "required": ["name"],
      "additionalProperties": true
    },
    "jurisdiction": {
      "type": "string"
    },
    "language": {
      "type": "string",
      "description": "BCP-47 language code (e.g. fr-FR, en-GB)."
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "description": { "type": "string" },
          "source": { "type": "string" },
          "hash": { "type": "string" },
          "uri": { "type": "string" }
        },
        "required": ["id", "type"],
        "additionalProperties": true
      }
    },
    "narrative": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "pdf_hash": { "type": "string" },
        "pdf_uri": { "type": "string" },
        "timeline_ref": { "type": "string" },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["summary", "pdf_hash"],
      "additionalProperties": true
    },
    "registry": {
      "type": "object",
      "properties": {
        "registry_id": { "type": "string" },
        "entry_id": { "type": "string" },
        "public_hash": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["registry_id", "entry_id", "public_hash"],
      "additionalProperties": true
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "algorithm": { "type": "string" },
          "value": { "type": "string" },
          "signer_id": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" }
        },
        "required": ["algorithm", "value"],
        "additionalProperties": true
      }
    }
  },
  "required": [
    "rpo_version",
    "type",
    "bundle_id",
    "created_at",
    "issuer",
    "subject",
    "evidence",
    "narrative",
    "signatures"
  ],
  "additionalProperties": true
}

